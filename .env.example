# === Authentication ===
# MCP endpoint auth token (clients must send Bearer <token>)
MCP_AUTH_TOKEN=your-mcp-token-here

# Admin panel auth token
ADMIN_TOKEN=your-admin-token-here

# === Browser Pool ===
# Initial browser tab count
BROWSER_POOL_SIZE=5
# Max tabs (auto-scaling upper limit)
BROWSER_MAX_POOL_SIZE=20

# === Optional: Browser Fingerprint ===
# BROWSER_PROXY=socks5://127.0.0.1:1080
# BROWSER_OS=windows
# BROWSER_FONTS=Arial,Helvetica
# BROWSER_BLOCK_WEBGL=true
# BROWSER_ADDONS=/path/to/addon.xpi

# === Server ===
MCP_PORT=8897

# === Database ===
# WSM_DB_PATH=/data/wsm.db   # Docker default, no need to change

# === Redis (Docker internal) ===
# REDIS_URL=redis://redis:6379/0   # Docker default, no need to change
